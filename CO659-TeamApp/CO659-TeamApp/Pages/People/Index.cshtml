                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].AddressHouseNo)
