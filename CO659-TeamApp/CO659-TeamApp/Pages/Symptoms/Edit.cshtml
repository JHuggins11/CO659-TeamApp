@page
@model CO659_TeamApp.Pages.Symptoms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Prescription.PrescriptionID" />
            <div class="form-group">
                <label asp-for="Prescription.PersonID" class="control-label"></label>
                <select asp-for="Prescription.PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
                <span asp-validation-for="Prescription.PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.PrescriptionDate" class="control-label"></label>
                <input asp-for="Prescription.PrescriptionDate" class="form-control" />
                <span asp-validation-for="Prescription.PrescriptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.PrescriptionPrice" class="control-label"></label>
                <input asp-for="Prescription.PrescriptionPrice" class="form-control" />
                <span asp-validation-for="Prescription.PrescriptionPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.PrescriptionQty" class="control-label"></label>
                <input asp-for="Prescription.PrescriptionQty" class="form-control" />
                <span asp-validation-for="Prescription.PrescriptionQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
